#include <stdio.h> //funções como o printf e scanf
#include <locale.h> //necessário para usar o setlocale

int main(){
  int x,y, soma, produto;
  setlocale(LC_ALL,"Portuguese");

  printf("Digite um número: ");
  scanf("%d",&x);
  printf("Por favor, digite mais um número: ");
  scanf("%d",&y);


  printf("Soma: %d + %d = %d\n", x, y, x+y);
  printf("Produto: %d x %d = %d\n", x, y, x*y);
  printf("Divisão: %d / %d = %d\n", x, y, x/y);
  printf("Resto: %d %% %d = %d\n", x, y, x%y);

  return 0;

}
