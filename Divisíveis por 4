#include <stdio.h>
#include <locale.h>
#include <string.h>

/*Calcular e mostrar os números divisíveis por 4 menores que 100*/


int main(){
  int i;
  setlocale(LC_ALL,"Portuguese");

  printf("Divisíveis por 4 e menores que 100\n\n");
  for(i=0;i<=100;i=i+2){
    if(i%4==0){
        printf("%d \n",i);
    }
  }


  return 0;

}
